<std.fissile
;
ERROR=
@ifeq "$1" ""
ERROR=1
@endif
@ifeq "$2" ""
ERROR=1
@endif
;
@ifeq "$ERROR" "1"
#Usage: bc_channel_identity.cin <ident> <other>
@else
;
IDENT=$1
OTHER=$2
;
BIN1=*!hex2bin?$IDENT
BIN2=*!hex2bin?$OTHER
;
COMBINED=*!xorbin?$BIN1,$BIN2
COMBINED=*!bin2hex?$COMBINED
COMBINED=000000000$COMBINED
COMBINED=@substr:-9:$COMBINED
;
REVERSED=*!reverse?$COMBINED
;
@ifeq "$COMBINED" "$REVERSED"
LAST=@substr:8,1:$COMBINED
DEC=@hexdec:$LAST
DEC=@$DEC+1
@ifeq "$DEC" "16"
DEC=0
@endif
HEX=@dechex:$DEC
PREFIX=@substr:0,8:$COMBINED
COMBINED=$PREFIX$HEX
REVERSED=*!reverse?$COMBINED
@endif
;
.session_variable @set ""
.session_variable @set "$IDENT"
.session_variable @set "$OTHER"
;
.session_variable @set
LINES=$OUTPUT
;
LINE1=%LINES:1%
;
@ifneq "$IDENT" "$LINE1"
TEMP_VAL=$COMBINED
COMBINED=$REVERSED
REVERSED=$TEMP_VAL
@endif
;
@endif
