if [ $# -lt 2 ]; then
 echo "Usage: export_app_file [app dir] [list file hash] [[web root]]"
else
 if [ $# -gt 2 ]; then
  export WEBDIR=$3
 fi
 if [ "$WEBDIR" = "" ]; then
  echo "Error: Missing environment variable 'WEBDIR'."
 else
  echo "<<export_app_file.cin $1 $2 $WEBDIR" >~export_app_file
  ./ciyam_client -echo -quiet -no_prompt -no_stderr <~export_app_file
  rm ~export_app_file
 fi
fi
