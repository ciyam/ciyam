@ifeq "$1" ""
#Usage: tree_crypt.cin <tag_or_hash> [<password>]
@else
@ifneq "$2" ""
;NOTE: Prefix and remove in case @ is the first character.
ARGS=X$2
ARGS=@substr:1:$ARGS
@else
.session_variable @pubkey
EXT_PUBKEY=$OUTPUT
DATA_AND_PUBKEY=@password:Enter Password:$EXT_PUBKEY
ARGS=@repstr:\:/ -k=:$DATA_AND_PUBKEY
@endif
;
@ifdef $ARGS
 .file_crypt -recurse -blobs_only $1 $~ARGS
@endif
@endif
