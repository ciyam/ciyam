if [ $# -lt 1 ]; then
 echo Usage: generate [module name] [[app dir]] [[module alias]]
else
 export CIYAM_MODEL=

 ./test_sql Meta Meta "SELECT CONCAT('export CIYAM_MODEL=', C_Key_) FROM T_Meta_Model WHERE C_Name = '$1'">~generate
 chmod a+x ~generate
 . ./~generate
 rm ~generate

 if [ "$CIYAM_MODEL" = "" ]; then
  echo "Error: Unknown module '$1'."
 else
  echo "Starting generate..."
  tmp_file=$(mktemp --suffix ".tmp")

  ./ciyam_client -quiet -no_prompt -no_stderr -exec="<generate.cin $CIYAM_MODE" >$tmp_file

  cat $tmp_file
  if grep -q "Error" $tmp_file || grep -q "error" $tmp_file; then
   rm $tmp_file
  else
   ./genmodule -rdbms $1 $2 $3

   ./ciyam_client -quiet -no_prompt -no_stderr -exec="<genlinks.cin $CIYAM_MODEL" >$tmp_file

   cat $tmp_file
   rm $tmp_file

   if [ -f manuscript.sio.new ]; then
    ./remove_identical manuscript.sio manuscript.sio.new
   fi
   echo "Finished generate..."
  fi
 fi
fi
