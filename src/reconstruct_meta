 echo Usage: reconstruct_meta [okay]
else
 if [ -f packages.lst ]; then
  ./construct @packages.lst ciyam_class.cpp.xrep
 fi
 ./destroy_apps_and_models $1
 ./reinstall_packages $1
fi
