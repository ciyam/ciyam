NUM_ARGS=0
@ifdef $1
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $2
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $3
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $4
NUM_ARGS=@$NUM_ARGS+1
@endif
;
@ifneq "$NUM_ARGS" "4"
#NOTE: This script needs a tree tag, branch type, tag list and branch tree expression.
@else
;
TTAG=$1
TYPE=$2
TAGS=$3
EXPR=X$4
;
ITEMS=
TTYPE=T
PREFIX=
WANT_INFO=
.session_variable @set ""
;
EXPR=@substr:1:$EXPR
@ifdef $EXPR
FIRST=@substr:0,1:$EXPR
@ifeq "$FIRST" "?"
EXPR=@substr:1:$EXPR
PREFIX=?
WANT_INFO=1
@endif
@endif
;
DEPTH=4
NUM_DIRS=0
@ifdef $EXPR
LINES=@repstr:\:/\n:$EXPR
.session_variable @deque ""
.session_variable @deque "~$LINES"
.session_variable @deque size
NUM_DIRS=$OUTPUT
DEPTH=@$DEPTH+$OUTPUT
@endif
;
PREFIX=$PREFIX$TTYPE
SUFFIX=$TYPE:$EXPR
;
LINES=@repstr:,/\n:$TAGS
.session_variable @deque ""
.session_variable @deque "~$LINES"
FIRST=1
;
@:LOOP
ITEMS=
@label NEXT
.session_variable @deque front
@ifndef $OUTPUT
@label END_LOOP
@endif
@skip
;
@:NEXT
NEXT_TAG=$OUTPUT
.session_variable @deque
DEQUE=$OUTPUT
.session_variable @deque ""
.file_info -recurse -d=-$DEPTH -p=$PREFIX:$NEXT_TAG:$SUFFIX* $TTAG
.session_variable @deque "~$OUTPUT"
;
@:INNER_LOOP
@label INNER_NEXT
.session_variable @deque front
@ifndef $OUTPUT
@label END_INNER
@endif
@skip
;
@:INNER_NEXT
LINES=@repstr: /\n:$OUTPUT
INFO=%LINES:1%
@ifneq "$INFO" "[list]"
HASH=%LINES:2%
NAME=%LINES:3%
SIZE=%LINES:4%
; NOTE: The size is expected to include a space so is split across two lines.
EXTRA=%LINES:5%
@ifdef $EXTRA
SIZE=$SIZE $EXTRA
@endif
;
@ifndef $WANT_INFO
ITEM=$NAME
@else
ITEM=$NAME $HASH $SIZE
@endif
;
@ifdef $FIRST
.session_variable @set "$ITEM"
@else
.session_variable @set "$ITEM"
@ifdef $OUTPUT
@ifndef $ITEMS
ITEMS=$ITEM
@else
ITEMS=$ITEMS,$ITEM
@endif
@endif
@endif
.session_variable @deque ""
.session_variable @deque "~$INNER_DEQUE"
@endif
;
.session_variable @deque pop_front
!!@:INNER_LOOP
@:END_INNER
;
@ifndef $FIRST
.session_variable @set ""
@ifndef $ITEMS
.session_variable @set ""
@else
ITEMS=@repstr:,/\n:$ITEMS
.session_variable @set "~$ITEMS"
@endif
@endif
;
FIRST=
.session_variable @deque ""
.session_variable @deque "~$DEQUE"
.session_variable @deque pop_front
!!@:LOOP
@:END_LOOP
;
.session_variable @set
#$OUTPUT
;
@endif
