   <pos>+0,+25
   <name>Page_Header
   <size>shrinkable
   <font>title
   <width>-1
   <height>1
   <border>0.5
   <borderx>shadow
   <padding>5,2.5
   <alignment>center
   <data>@title
  </field>
  <field/>
   <pos>+730,25
   <name>Page_Count
   <font>footer
   <width>80
   <height>1
   <alignment>right
   <data>`{`$page_count`}
  </field>
  <field/>
   <pos>+0,-30
   <name>Page_Footer
   <size>shrinkable
   <font>footer
   <width>-1
   <height>1
   <alignment>center
   <data>@footer
  </field>
