if [ $# -lt 1 ]; then
 echo Usage: set_password [user] [password]
else
 echo "$1:$2" | sudo chpasswd

 if [ ! "$2" = "linux" ]; then
  sudo umount /home/$1/backup
  truncate -s 101G /home/$1/backup.img
  sudo mount /home/$1/backup.img /home/$1/backup
  sudo resize2fs /home/$1/backup.img
 fi

fi
