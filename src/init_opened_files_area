if [ $# -lt 1 ]; then
 echo Usage: init_opened_files_area [user]
else
 if [ -d "/home/$1/opened" ]; then
  if mountpoint -q "/home/$1/opened"; then
   echo "[init_opened_files_area] 'opened' is already mounted"
  else
   sudo mkfs -q /dev/ram1 500M
   sudo mount /dev/ram1 "/home/$1/opened"
   sudo chown -R tux:www "/home/$1/opened"
  fi
 fi
fi
