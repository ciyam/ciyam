NUM_ARGS=0
@ifdef $1
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $2
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $3
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $4
NUM_ARGS=@$NUM_ARGS+1
@endif
@ifdef $5
NUM_ARGS=@$NUM_ARGS+1
@endif
;
@ifneq "$NUM_ARGS" "5"
#NOTE: This script requires an identity, auto-start, description, host name and port number.
@else
;
IDENTITY=$1
AUTO_START=$2
DESCRIPTION=$3
HOST_NAME=$4
HOST_PORT=$5
;
.system_variable @blockchain
BLOCKCHAIN=$OUTPUT
@ifeq "$BLOCKCHAIN" ""
#Error: Found empty '@blockchain' system variable value.
@else
.system_variable @peer_port
PEER_PORT=$OUTPUT
@ifeq "$PEER_PORT" ""
#Error: Found empty '@peer_port' system variable value.
@else
.peer_listen $PEER_PORT $IDENTITY
.storage_init Meta
.pc sys @now Meta Global_Peerchain_Entry %IDENTITY%_listener "Auto_Start=$AUTO_START,Description=$DESCRIPTION,Entry_Type=1,Port_Number=$PEER_PORT"
.pc sys @now Meta Global_Peerchain_Entry %BLOCKCHAIN%_%IDENTITY% "Auto_Start=$AUTO_START,Description=$DESCRIPTION,Entry_Type=0,Host_Domain=$HOST_NAME,Port_Number=$HOST_PORT"
@ifndef $ERROR
#Created listener and global peerchain entries for identity '$IDENTITY'.
@endif
.storage_term
@endif
@endif
@endif
