[Unit]
Description=CIYAM Service
After=network.target

[Service]
Type=forking
Restart=always
RestartSec=10
User=tux
Environment="WEBDIR=/srv/www/htdocs"
ExecStartPre=
ExecStart=/home/tux/ciyam/src/ciyam_server -daemon -chdir=/home/tux/ciyam/src
ExecStartPost=
ExecStop=
ExecReload=

[Install]
WantedBy=multi-user.target

