if [ "$WEBDIR" = "" ]; then
 echo "Error: Missing environment variable 'WEBDIR'."
else
 MYSQL=

 if [ "$GROUP" = "" ]; then
  GROUP=`id -gn`
 fi

 if [ -f /usr/bin/mysql ]; then
  MYSQL=mysql
 fi

 if [ -f /usr/bin/mariadb ]; then
  MYSQL=mariadb
 fi

 if [ "$MYSQL" = "" ]; then
  echo "Error: Neither MySQL (nor MariaDB) program was found (not installed?)."
 else
  ./xrep @ciyamd.service.xrep user=$USER group=$GROUP mysql=$MYSQL webdir=$WEBDIR >ciyamd.service
 fi
fi
