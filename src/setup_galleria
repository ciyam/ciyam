if [ $# -gt 0 ]; then
 export WEBDIR=$1
fi
if [ "$WEBDIR" = "" ]; then
 echo Error: Missing environment variable 'WEBDIR'.
else
 if [ -d $WEBDIR/galleria ]; then
  echo "Error: Galleria has already been installed."
 else
 {
  mkdir $WEBDIR/galleria
  ./unbundle -q galleria -d $WEBDIR/galleria
 }
fi
