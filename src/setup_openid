if [ $# -gt 0 ]; then
 export WEBDIR=$1
fi
if [ "$WEBDIR" = "" ]; then
 echo "Error: Missing environment variable 'WEBDIR'."
else
 if [ -d $WEBDIR/openid ]; then
  echo "Error: OpenID has already been installed."
 else
 {
  mkdir $WEBDIR/openid
  ./unbundle -q open -d $WEBDIR
 }
fi

